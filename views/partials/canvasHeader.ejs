<div class="fixed-top bg-light p-2 m-0 ml-2 mr-2 rounded-bottom" id="headerContainer">
<div class="d-flex" id="canvasHeader">
    <div class="mb-2" id="canvasTitle">
        <input class="p-0 pl-1 bg-light" type="text" placeholder="Flourishing Business Canvas">
    </div>
    <div class="ml-auto d-flex mt-0" id="canvasInfo">
        <div class="designInfo ml-2">
            <input class="form-control bg-light" type="text" placeholder="Designed for:">
        </div>
        <div class="designInfo ml-2">
            <input class="form-control bg-light" type="text" placeholder="Designed by:">
        </div>
        <div class="designInfo ml-2">
            <input class="form-control bg-light" type="text" placeholder="Date:">
        </div>
    </div>
    <div class="ml-2 dropdown mt-0" id="exportBtn">
        <button class="dropbtn btn btn-secondary">Export</button>
        <div class="dropdown-content">
            <a id="exportJson" onclick="exportJson()">Export as JSON</a>
            <a id="exportSvg" onclick="exportSvg()">Export as SVG</a>
            <a id="exportPng" onclick="exportPng()">Export as PNG</a>
            <a id="exportPdf" onclick="exportPdf()">Export as PDF</a>
        </div>
    </div>
</div>

<div id="lowerHeader" class="d-flex">
<div id="stickyInfo" class="input-group">
        <button class="btn btn-secondary mr-2"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M11.67 3.87L9.9 2.1 0 12l9.9 9.9 1.77-1.77L3.54 12z" fill="white"/></svg></button>
        <input id='textInputBox' class="form-control bg-light" type="text" placeholder="Type content">
        <button id="createBtn" class="ml-2 mr-2 btn btn-secondary" type="button" onclick="createSticky()">New Sticky</button>
        <%#<button id="removeAllBtn" onclick="removeAll()">Remove All</button>%>
        <%#<button id="importBtn" onclick="importJson()">Import JSON</button>%>
        <%#<button id="whichBox" onclick="inWhichBox()">Which box?</button>%>
</div>
<div id="searchBar" class="ml-auto">
    <input id="searchContent" onclick="searchInCanvas()" class="form-control" type="text"
        placeholder="Search within the canvas">
    <div id="searchResult" class="list-group position-fixed"></div>
</div>
</div>
</div>